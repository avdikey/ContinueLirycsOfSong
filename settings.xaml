<Window x:Class="ContinueLirycsOfSong.settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContinueLirycsOfSong"
        mc:Ignorable="d"
        Title="Настройки" x:Name="settings_form" Height="150" Width="300" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Loaded="Window_Loaded" ShowInTaskbar="False" Topmost="True" Activated="settings_form_Activated">
    <Grid>
        <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="tb1" Text="Язык интерфейса: "/>
            <ComboBox x:Name="language_choice" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="125" SelectedIndex="-1" SelectionChanged="language_choice_SelectionChanged">
                <ComboBoxItem Content="русский"/>
                    <ComboBoxItem Content="українська"/>
                </ComboBox>
        </StackPanel>
            <TextBlock x:Name="tb2" Text="Разработчик: avdikey."/>
        </StackPanel>
    </Grid>
</Window>
